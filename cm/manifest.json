{
    "manifest_version": 3,
    "name": "My Extension",
    "version": "1.0",
    "description": "My poc credmanager",
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "permissions": [
        "http://*/*",
        "https://*/*",
        "storage",
        "activeTab",
        "webNavigation",
        "webRequest",
        "scripting",
        "tabs"
    ],
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "popup.html",
                "bs.html"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ]
}