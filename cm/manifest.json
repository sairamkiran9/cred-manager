{
    "manifest_version": 3,
    "name": "My Extension",
    "version": "1.0",
    "description": "My poc credmanager",
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "permissions": [
        "http://*/*",
        "https://*/*",
        "storage"
    ],
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ],
    "storage": {
        "managed_schema": "managed_schema.json"
    },
    "background": {
        "service_worker": "scripts/background.js"
    }
}